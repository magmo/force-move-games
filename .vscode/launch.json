{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "truffle-compile",
            "cwd": "${workspaceFolder}/packages/fmg-core",
            "program": "${workspaceFolder}/packages/fmg-core/node_modules/.bin/truffle",
            "args": ["compile"]
        },
        {
            "type": "node",
            "name": "vscode-jest-tests-core",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}/packages/fmg-core",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "name": "vscode-jest-tests-simple-adjudicator",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}/packages/fmg-simple-adjudicator",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}